{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "$data": "${siteItems}",
      "style": "emphasis",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${SiteName}",
                  "size": "Large",
                  "weight": "Bolder",
                  "color": "Accent"
                }
              ]
            },
            {
              "type": "Column",
              "width": "auto",
              "items": [
